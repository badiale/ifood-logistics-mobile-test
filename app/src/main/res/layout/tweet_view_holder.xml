<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/tweet_view_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_item_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_item_radius"
    app:cardElevation="@dimen/card_item_elevation">

    <LinearLayout
        android:id="@+id/tweet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_item_background"
        android:padding="@dimen/card_item_padding">

        <ImageView
            android:id="@+id/tweet_profile_picture"
            android:layout_width="@dimen/user_image_size"
            android:layout_height="@dimen/user_image_size"
            tools:src="@drawable/ic_person_black_24dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="@dimen/text_default_padding"
            android:paddingStart="@dimen/text_default_padding">

            <TextView
                android:id="@+id/tweet_user_name"
                style="@style/tweet_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="User name"/>

            <TextView
                android:id="@+id/tweet_text"
                style="@style/tweet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eligendi non quis exercitationem culpa nesciunt nihil aut nostrum"/>

            <TextView
                android:id="@+id/tweet_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="12sp"
                android:textStyle="italic"
                tools:text="Mon 3"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>